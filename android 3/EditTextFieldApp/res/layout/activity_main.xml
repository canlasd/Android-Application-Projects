<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TextViewActivity" >

    <AutoCompleteTextView
        android:id="@+id/dogs"
        android:layout_width="match_parent"
        android:hint="@string/hint"
        androidpaddingTop="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:text="@string/hint" >

        <requestFocus />
    </AutoCompleteTextView>

    <ToggleButton
        android:id="@+id/dog_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dogs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
        

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/dog_found"
        android:layout_centerHorizontal="true" >
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dogs"
        android:layout_alignParentTop="true"
        android:layout_marginTop="33dp"
        android:paddingTop="16dp"
        android:text="@string/dog_breeds"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>