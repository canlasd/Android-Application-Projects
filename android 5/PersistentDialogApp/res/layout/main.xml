<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btn_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="@string/simple_dialog" 
        android:textSize="14sp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_dialog2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_dialog"
        android:layout_below="@+id/btn_dialog"
        android:layout_marginTop="25dp"
        android:text="@string/list_dialog" 
        android:textSize="14sp"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_dialog3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_dialog2"
        android:layout_below="@+id/btn_dialog2"
        android:layout_marginTop="25dp"
        android:text="@string/checkbox_dialog"
        android:textSize="14sp" 
        android:onClick="onClick"/>

    <Button
        android:id="@+id/btn_dialog4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btn_dialog3"
        android:layout_below="@+id/btn_dialog3"
        android:layout_marginTop="25dp"
        android:text="@string/custom_dialog" 
        android:textSize="14sp"
        android:onClick="onClick"/>

</RelativeLayout>
